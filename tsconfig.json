{
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "types": ["node"],
    "incremental": true,
    "target": "ES5",
    "module": "commonjs",
    "lib": ["DOM", "ESNext"],
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "react",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node"
  }
}
